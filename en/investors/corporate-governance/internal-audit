        <script>
        $(document).click(function(e) {
            if (!$("#cate").is(e.target) && !$("#cate").has(e.target).length) {
                $('#cate').removeClass('show');
            }
            
            
        });
        $(window).scroll(function(){
            if($(window).scrollTop()>= 500){
               $('.btn-bar').addClass('fixed');
            }
            else {
                $('.btn-bar').removeClass('fixed');
            }
            if ($(window).width() < 991) {
                if($(window).scrollTop()>= 100){
                    $('.btn-bar').addClass('fixed');
                 }
                 else {
                     $('.btn-bar').removeClass('fixed');
                 }
             }
         });
</script>
